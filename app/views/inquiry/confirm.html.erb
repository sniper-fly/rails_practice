<%#binding.pry %>

<%= form_for @inquiry, url: {action: 'create'} do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :mail_address %>
  <%= f.hidden_field :category %>
  <%= f.hidden_field :content %>

  <div>
    <%= f.label "名前" , {style: "display: inline-block;"}%>
    <%= @inquiry.name %>
  </div>
  <div>
    <%= f.label "メールアドレス", {style: "display: inline-block;"} %>
    <%= @inquiry.mail_address %>
  </div>
  <div>
    <%= f.label "カテゴリー", {style: "display: inline-block;"}%>
    <%= @inquiry.get_category %>
  </div>
  <div>
    <%= f.label "内容", {style: "display: inline-block;"} %>
    <%= @inquiry.content %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit '戻る', name: 'back' %>
    <%= f.submit '送信' %>
  </div>
<% end %>