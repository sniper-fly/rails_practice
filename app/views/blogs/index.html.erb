<h1>Listing Blogs</h1>

<div class="container">
  <div id="new-blog-link">
    <%= link_to '新規ブログを作成する', new_blog_path %>
  </div>

  <div class="row">
    <% @blogs.each do |blog| %>
<!--      <div class="blog-panel">-->
      <div class="blog-panel col-xs-12 col-md-6">
        <h2><%= blog.name %></h2>
        <p><%= blog.article %></p>
        <p><%= blog.created_at %></p>
        <div class="blog-links">
          <%= link_to 'Show', blog, class: 'btn btn-light btn-sm' %>
          <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info btn-sm' %> |
          <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>

</div>
