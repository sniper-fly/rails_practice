<h1>Listing Blogs</h1>

<div id="new-blog-link">
  <%= link_to '新規ブログを作成する', new_blog_path %>
</div>

<% @blogs.each do |blog| %>
  <div class="blog-panel">
    <h2><%= blog.name %></h2>
    <p><%= blog.article %></p>
    <p><%= blog.created_at %></p>
    <div class="blog-links">
      <%= link_to 'Show', blog %>
      <%= link_to 'Edit', edit_blog_path(blog) %> |
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
